<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Movie Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 min-h-screen p-8">
  <div class="max-w-6xl mx-auto space-y-10">
    <!-- Page Title -->
    <h1 class="text-4xl font-bold text-center text-indigo-700 mb-8">ðŸŽ¬ Movie Management System</h1>

    <!-- Add Movie Form -->
    <form action="/add" method="post" enctype="multipart/form-data"
      class="bg-white shadow-2xl rounded-2xl p-8 border border-gray-200">
      <h2 class="text-2xl font-semibold text-indigo-600 mb-6 text-center">Add New Movie</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-gray-600 font-medium mb-2">Movie Name</label>
          <input type="text" name="title" placeholder="Enter movie name"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500" required>
        </div>

        <div>
          <label class="block text-gray-600 font-medium mb-2">Director</label>
          <input type="text" name="director" placeholder="Enter director name"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500" required>
        </div>

        <div>
          <label class="block text-gray-600 font-medium mb-2">Release Year</label>
          <input type="text" name="releaseYear" placeholder="Enter release year"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500" required>
        </div>

        <div>
          <label class="block text-gray-600 font-medium mb-2">Rating</label>
          <input type="text" name="rating" placeholder="Enter rating"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500" required>
        </div>

        <div>
          <label class="block text-gray-600 font-medium mb-2">Movie Image</label>
          <input type="file" name="movieImg"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 bg-gray-50 cursor-pointer focus:ring-2 focus:ring-indigo-500">
        </div>

        <div>
          <label class="block text-gray-600 font-medium mb-2">Duration</label>
          <input type="text" name="duration" placeholder="Enter duration"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500" required>
        </div>

        <div class="md:col-span-2">
          <label class="block text-gray-600 font-medium mb-2">Description</label>
          <textarea name="description" placeholder="Enter description"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 h-24 focus:ring-2 focus:ring-indigo-500"></textarea>
        </div>
      </div>

      <div class="mt-6 text-center">
        <button type="submit"
          class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-8 py-2 rounded-lg transition-all duration-300">
          âž• Add Movie
        </button>
      </div>
    </form>

    <!-- Movie List Table -->
    <div class="bg-white shadow-2xl rounded-2xl overflow-hidden border border-gray-200">
      <h2 class="text-2xl font-semibold text-indigo-600 mb-4 p-6 border-b border-gray-200">ðŸŽ¥ Movie List</h2>
      <div class="overflow-x-auto">
        <table class="w-full border-collapse text-left">
          <thead class="bg-indigo-600 text-white">
            <tr>
              <th class="px-6 py-3">Movie Name</th>
              <th class="px-6 py-3">Image</th>
              <th class="px-6 py-3">Director</th>
              <th class="px-6 py-3">Year</th>
              <th class="px-6 py-3">Rating</th>
              <th class="px-6 py-3">Duration</th>
              <th class="px-6 py-3">Description</th>
              <th class="px-6 py-3 text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% movieData.map((element, index) => { %>
            <tr class="border-b hover:bg-gray-50 transition">
              <td class="px-6 py-3 font-medium text-gray-800"><%= element.title %></td>
              <td class="px-6 py-3">
                <img src="<%= element.movieImg %>" alt="movie" class="w-24 h-24 object-cover rounded-lg shadow-md">
              </td>
              <td class="px-6 py-3 text-gray-700"><%= element.director %></td>
              <td class="px-6 py-3 text-gray-700"><%= element.releaseYear %></td>
              <td class="px-6 py-3 text-gray-700"><%= element.rating %></td>
              <td class="px-6 py-3 text-gray-700"><%= element.duration %></td>
              <td class="px-6 py-3 text-gray-700 max-w-xs truncate"><%= element.description %></td>
              <td class="px-6 py-3 text-center space-x-2">
                <a href="/edit/<%= element.id %>">
                  <button
                    class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-1 rounded-md shadow transition">Edit</button>
                </a>
                <a href="/delete/<%= element.id %>"
                  onclick="return confirm('Are you sure you want to delete this movie?')">
                  <button
                    class="bg-red-600 hover:bg-red-700 text-white px-4 py-1 rounded-md shadow transition">Delete</button>
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>
